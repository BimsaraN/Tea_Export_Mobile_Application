<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="horizontal"
    tools:context=".StrawberryTea">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#638E21">
    </RelativeLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="-307dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/strawberry1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strawberry Tea"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:layout_marginLeft="-270dp"
        android:layout_marginTop="245dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/reviewbtn"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-245dp"
        android:layout_marginTop="320dp"
        android:backgroundTint="#638E21"
        android:text="Reviews    ★★★★★"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp" />

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-285dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/productround"
        android:elevation="10dp"
        android:nestedScrollingEnabled="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:text="      10 Pcs : $4.99"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <RadioButton
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-300dp"
                android:layout_marginTop="50dp"
                android:text="      50Pcs : $10.99"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <RadioButton
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-300dp"
                android:layout_marginTop="100dp"
                android:text="      100 Pcs : $19.99"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/cartbtn"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="-390dp"
        android:layout_marginTop="620dp"
        android:backgroundTint="#638E21"
        android:text="Add To Cart"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"/>

    <Button
        android:id="@+id/buybtn"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="620dp"
        android:backgroundTint="#638E21"
        android:text="Buy Now"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"/>

</LinearLayout>