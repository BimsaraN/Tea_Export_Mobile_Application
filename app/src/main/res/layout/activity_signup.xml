<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:layout_width="676dp"
        android:layout_height="901dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="-110dp"
        android:src="@drawable/img1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-443dp"
        android:layout_marginTop="70dp"
        android:text="Signup"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_marginLeft="-248dp"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/TextViewTextPersonName1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="390dp"
            android:inputType="text"
            android:text="User Name : "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/productname"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="388dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/TextViewTextPersonName2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="325dp"
            android:inputType="textEmailAddress"
            android:text="Email : "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/customername"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="142dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="318dp"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/TextViewTextPersonName3"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="197dp"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="273dp"
            android:inputType="text"
            android:text="Password : "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/country"
            android:layout_width="261dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="224dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="233dp"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/TextViewTextPersonName4"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="276dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="164dp"
            android:inputType="textPersonName"
            android:text="Reenter Password : "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/feedback"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="299dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="161dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/subbutton"
            android:layout_width="166dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="99dp"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="95dp"
            android:layout_marginBottom="60dp"
            android:radius="250dp"
            android:text="Register"
            android:backgroundTint="#638E21"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="10dp"/>
    </RelativeLayout>

</LinearLayout>