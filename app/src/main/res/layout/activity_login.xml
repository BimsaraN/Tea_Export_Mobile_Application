<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:layout_width="676dp"
        android:layout_height="901dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="-110dp"
        android:src="@drawable/img1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-423dp"
        android:layout_marginTop="70dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="50dp" />

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_marginLeft="-248dp"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/TextViewTextPersonName1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="390dp"
            android:inputType="text"
            android:text="User Name : "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/productname"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="388dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/TextViewTextPersonName3"
            android:layout_width="249dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="131dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="312dp"
            android:inputType="text"
            android:text="Password : "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/country"
            android:layout_width="261dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="166dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="291dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/log1button"
            android:layout_width="160dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="102dp"
            android:layout_marginTop="255dp"
            android:layout_marginEnd="92dp"
            android:layout_marginBottom="165dp"
            android:backgroundTint="#638E21"
            android:radius="250dp"
            android:text="Login"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you haven't an account"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="360dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/signup1btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="233dp"
            android:layout_marginTop="351dp"
            android:backgroundTint="#f3f6e1"
            android:text="signup"
            android:textColor="#456DB9"/>

    </RelativeLayout>

</LinearLayout>